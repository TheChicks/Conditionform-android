                    android:id="@+id/tvShapeInfoFormulation"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="*모양 :"
                    android:id="@+id/textView11"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvShapeInfoShape"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="*색상 :"
                    android:id="@+id/textView12"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvShapeInfoColor"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="*식별표시 :"
                    android:id="@+id/textView13"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvShapeInfoIdMark"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="성분정보"
                android:id="@+id/textView14"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/bright_foreground_material_light"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="bottom"
                android:layout_marginBottom="1dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="New Text"
                android:id="@+id/tvIngredientInfo"
                android:background="#ffffff"
                android:textStyle="normal"
                android:textColor="@color/bright_foreground_material_light"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="저장방법"
                android:id="@+id/textView15"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/bright_foreground_material_light"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="bottom"
                android:layout_marginBottom="1dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="New Text"
                android:id="@+id/tvStoragintMethod"
                android:background="#ffffff"
                android:textStyle="normal"
                android:textColor="@color/bright_foreground_material_light"
                android:paddingLeft="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="효능효과"
                android:id="@+id/textView16"
