<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".PillDetailsActivity"
tools:showIn="@layout/activity_pill_details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_grey_300"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/IvPill"
                android:background="@android:drawable/ic_menu_crop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="New Text"
                android:id="@+id/tvPillName"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:textColor="@color/abc_search_url_text_pressed" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="복지부 분류"
                    android:id="@+id/textView"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvCategoryWelfare"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="구분"
                    android:id="@+id/textView2"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvClassification"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="제조/수입 구분"
                    android:id="@+id/textView3"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvManufactureAssort"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
