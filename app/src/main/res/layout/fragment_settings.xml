<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thechicks.conditionform.SettingsFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0ecec"
        android:layout_margin="0dp"
        android:id="@+id/setting_linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="기본 식사 시간 설정"
            android:id="@+id/textView"
            android:textSize="15sp"
            android:textColor="@color/bright_foreground_material_light"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:autoText="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_material_light"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:layout_marginLeft="15dp"
                android:src="@android:drawable/presence_busy" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="아침"
                android:id="@+id/textView2"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="08:00"
                android:id="@+id/tvMorningtime"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:clickable="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@color/background_material_light"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_marginLeft="15dp"
                android:src="@android:drawable/presence_online" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="점심"
                android:id="@+id/textView3"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12:00"
                android:id="@+id/tvDaytime"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:clickable="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@color/background_material_light"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_marginLeft="15dp"
                android:src="@android:drawable/star_big_on" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="저녁"
                android:id="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="18:00"
                android:id="@+id/tvEveningtime"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:clickable="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="진동 / 소리 선택"
            android:id="@+id/textView4"
            android:textSize="15sp"
            android:textColor="@color/bright_foreground_material_light"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:autoText="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_material_light"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_marginLeft="15dp"
                android:src="@android:drawable/presence_audio_away" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="소리"
                android:id="@+id/textView6"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swSound"
                android:checked="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@color/background_material_light"
            android:layout_marginBottom="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:layout_marginLeft="15dp"
                android:src="@android:drawable/ic_menu_always_landscape_portrait" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="진동"
                android:id="@+id/textView7"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/bright_foreground_material_light" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swVibrate"
                android:checked="true"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
