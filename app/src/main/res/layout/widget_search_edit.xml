<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="4dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_search"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:theme="@style/TextInputLayout_search">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editText_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="약품명 또는 약품코드를 입력해주세요."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageView_search_query_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@id/textInputLayout_search"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clear_24dp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textInputLayout_search"
        android:layout_toRightOf="@id/textInputLayout_search"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_search_24dp"/>

</RelativeLayout>